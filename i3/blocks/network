#!/bin/sh

text=''

for INTERFACE in $(ls /sys/class/net/); do
    state="$(cat /sys/class/net/$INTERFACE/operstate)"

    if [ "$state" = "up" ]; then
        ipaddr="$(ip addr show $INTERFACE | perl -n -e'/inet (.+)\// && print $1')"
        ipaddr="${ipaddr:-0.0.0.0}"

        case "$INTERFACE" in
            "wlan0")
                symbol=
                ;;
            "em1")
                symbol=
                ;;
            "usb-stick")
                symbol=
                ;;
            *)
                symbol=$INTERFACE
                ;;
        esac

        text="$text | $symbol $ipaddr"
    fi
done

if [ -n "$text" ]; then
    text=$(echo $text | sed "s/^| //")
    echo $text
    echo $text
else
    echo "-/->"
    echo "none"
    echo "#FF0000"
fi
